<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>To do list</title>
</head>

<body>
  {{#errors}}
    <p>{{message}}</p>
  {{/errors}}
  <form class="" action="/" method="post">
    <input type="text" name="newestitem" value="">
    <button type="submit" name="submit">Add new Todo</button>
  </form>
  {{#items}}
    {{^done}}
      <form class="" action="/{{_id}}" method="post">
        <button type="submit" name="button">Completed?</button>
        <label for="button">{{text}}</label>
      </form>
    {{/done}}
  {{/items}}
  <hr>
  <ul>
    {{#items}}
      {{#done}}
      <li>{{text}}</li>
      {{/done}}
    {{/items}}
  </ul>
</body>

</html>
